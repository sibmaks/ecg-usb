<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/infoScrollView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/channels_control_layout">
                <Button
                        android:text="@string/left_text_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/backChannelButton"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                        android:onClick="onBackChannelButton"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/channel_name_view"
                        app:layout_constraintStart_toEndOf="@+id/backChannelButton"
                        app:layout_constraintEnd_toStartOf="@+id/forwardChannelButton"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
                <Button
                        android:text="@string/right_text_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/forwardChannelButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp" android:onClick="onForwardChannelButton"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/graph_layout">
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/graph_line_view"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:drawableStart="@drawable/ic_play_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:id="@+id/startRecordButton"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        style="@style/Widget.AppCompat.Button.Small" android:onClick="onStartButtonClick"
                        android:enabled="false"/>
                <Button
                        android:drawableStart="@drawable/ic_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clearRecordButton"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        style="@style/Widget.AppCompat.Button.Small" app:layout_constraintVertical_bias="1.0"
                        android:onClick="onResetButtonClick" app:layout_constraintStart_toEndOf="@+id/recordToggleButton"
                        android:layout_marginStart="8dp"/>
                <Button
                        android:drawableStart="@drawable/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shareRecordButton"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        style="@style/Widget.AppCompat.Button.Small" app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/clearRecordButton" android:layout_marginStart="8dp"
                        android:onClick="onShareButtonClick"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/commandLinePlainText"
                        app:layout_constraintStart_toEndOf="@+id/shareRecordButton"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp" android:autofillHints="@string/command_line_hint"/>
                <Button
                        android:text="@string/send_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/sendButton"
                        app:layout_constraintStart_toEndOf="@+id/commandLinePlainText"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" android:onClick="onSendButtonClick" android:enabled="false"/>
                <ToggleButton
                        android:text="@string/record_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/recordToggleButton"
                        app:layout_constraintStart_toEndOf="@+id/startRecordButton"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textOff="@string/record_button" android:textOn="@string/recording_button"
                        android:checked="false" android:enabled="false" android:onClick="onRecordButtonClick"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView"
            />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>